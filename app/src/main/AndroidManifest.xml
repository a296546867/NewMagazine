<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sky.Activity">


    <!--联网权限-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!--文件读权限-->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <!--文件写权限-->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>



    <!--org.litepal.LitePalApplication 配置使用litepal数据库-->
    <application
        android:name="com.example.sky.Application.MApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!--用户中心-->
        <activity
            android:name=".CenterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <!--设置-->
        <activity
            android:name=".SettingActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <!--登录-->
        <activity
            android:name=".LoginActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <!--注册-->
        <activity
            android:name=".RegisterActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <!--VIP升级-->
        <activity
            android:name=".VIPActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <!--关于我们-->
        <activity
            android:name=".AboutUSActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <!--帮助-->
        <activity
            android:name=".HelpActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <!--密码修改-->
        <activity
            android:name=".ForgetPassWord"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <!--用户信息编辑-->
        <activity
            android:name=".UserInfoEdtActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />

    </application>

</manifest>