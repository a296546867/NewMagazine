<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/avtivity_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <!--会员等级-->
        <RelativeLayout
            android:id="@+id/magazine_myaccount_userlevel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:clickable="true"
            android:gravity="center">
            <TextView
                android:id="@+id/minefragment_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="普通会员"
                android:textColor="@color/title_text_color"
                android:textSize="20sp" />
        </RelativeLayout>
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <!--姓名-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="姓名:"
                android:textColor="@color/title_text_color"
                android:textSize="20sp"
                android:gravity="right"
                />

            <TextView
                android:id="@+id/minefragment_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:gravity="left"
                android:padding="8dp"
                android:textSize="20sp"
                />

            <TextView
                android:id="@+id/minefragment_edit"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="编辑"
                android:textSize="20sp"
                android:textColor="@color/magazine_red_color"
                android:gravity="center"
                android:layout_marginRight="10dp"
                />
            </TableRow>
            <!--手机号码-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="手机:"
                    android:textColor="@color/title_text_color"
                    android:textSize="20sp"
                    android:gravity="right"
                    />

                <TextView
                    android:id="@+id/minefragment_mobile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="8dp"
                    android:textSize="20sp"
                    />
            </TableRow>
            <!--到期时间-->
            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="到期时间:"
                    android:textColor="@color/title_text_color"
                    android:textSize="20sp"
                    android:gravity="right"
                    />

                <TextView
                    android:id="@+id/minefragment_datatime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:padding="8dp"
                    android:textSize="20sp"
                    />
            </TableRow>
        </TableLayout>
        <!--事件-->
        <ListView
            android:id="@+id/minefragment_historylistview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <!--会员升级-->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center">
            <TextView
                android:id="@+id/minefragment_upvip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="会员升级"
                android:textColor="@color/magazine_red_color"
                android:textSize="20sp" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>