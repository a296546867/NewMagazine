<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
   >

    <!--item-->
    <RelativeLayout
        android:id="@+id/collection_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <!--杂志封面-->
        <ImageView
            android:id="@+id/img_icon"
            android:layout_width="100dp"
            android:layout_height="120dp"
            />

        <!--文章名字-->
        <TextView
            android:id="@+id/txt_article_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_icon"
            android:layout_marginTop="10dp"
            android:text="name"
            android:textSize="18sp" />

        <!--心形图标-->
        <TextView
            android:id="@+id/txt_article_collect_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_article_name"
            android:layout_alignLeft="@+id/img_icon"
            android:layout_marginTop="10dp"
            android:text="心 "
            android:textColor="@android:color/holo_red_dark"
            android:textSize="15sp" />

        <!--收藏量文字-->
        <TextView
            android:id="@+id/txt_article_collect_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_article_name"
            android:layout_toRightOf="@id/txt_article_collect_img"
            android:layout_marginTop="10dp"
            android:text="收藏量"
            android:textSize="15sp" />

        <!--收藏量-->
        <TextView
            android:id="@+id/txt_article_collect_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_article_name"
            android:layout_alignRight="@id/img_icon"
            android:layout_marginTop="10dp"
            android:text="100"
            android:textSize="15sp" /></RelativeLayout>


    <!--右上角删除按钮-->
    <ImageView
        android:id="@+id/img_icon_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/close_btn"
        android:layout_alignTop="@+id/collection_item"
        android:layout_alignRight="@+id/collection_item"
        android:layout_marginRight="-10dp"
        android:layout_marginTop="-10dp" />


</RelativeLayout>