<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/avtivity_bg"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/applyform_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="基本资料"
                    android:textColor="@color/vip_text"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:background="#c8762d"
                    android:orientation="vertical" />
            </LinearLayout>

            <TableLayout
                android:id="@+id/register_tablelayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:padding="0dp" >

                <!-- 第1行 -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memberNameTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="姓名 *"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                    <EditText
                        android:id="@+id/memberNameEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp" />
                </TableRow>

                <!-- 第2行 -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/membermMobileTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:enabled="false"
                        android:padding="10dp"
                        android:text="移动电话*"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                    <EditText
                        android:id="@+id/membermMobileEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:enabled="false"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp" />
                </TableRow>

                <!-- 第3行 -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memberProvinceTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="省份 *"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                    <EditText
                        android:id="@+id/memberProvinceEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp" />
                </TableRow>

                <!-- 第4行 -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memberCityTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="城市 *"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                    <EditText
                        android:id="@+id/memberCityEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp" />
                </TableRow>

                <!-- 第5行 -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memberAgeTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="年龄"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                    <EditText
                        android:id="@+id/memberAgeEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp" />
                </TableRow>

                <!-- 第6行 -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memberSexTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="性别"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                    <EditText
                        android:id="@+id/memberSexEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp" />
                </TableRow>

                <!-- 第7行 -->

                <TableRow
                    android:id="@+id/row_authcode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memberCompanyTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="单位名称"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                    <EditText
                        android:id="@+id/memberCompanyEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp" />
                </TableRow>

                <!-- 第8行 -->

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/memberJobTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:text="职业"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp"
                        android:gravity="end"
                        />

                    <EditText
                        android:id="@+id/memberJobEditText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/rectangle"
                        android:padding="10dp"
                        android:singleLine="true"
                        android:textColor="#a6a6a6"
                        android:textSize="20sp" />
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="10dp" >

                <Button
                    android:id="@+id/commonnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_style"
                    android:paddingBottom="10dp"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp"
                    android:paddingTop="10dp"
                    android:text="提交为普通会员"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/vipnumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:background="@drawable/button_style"
                    android:paddingBottom="10dp"
                    android:paddingLeft="25dp"
                    android:paddingRight="25dp"
                    android:paddingTop="10dp"
                    android:singleLine="true"
                    android:text="继续申请VIP或尊贵会员"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressLayout"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="invisible" />
    </FrameLayout>

</ScrollView>